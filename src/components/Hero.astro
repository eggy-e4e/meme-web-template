---
import siteConfig from '../config/site.json';
---

<section id="hero" class="relative min-h-screen flex items-center justify-center px-4 overflow-hidden">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-20 left-10 w-32 h-32 bg-primary-500/20 rounded-full blur-xl animate-float"></div>
    <div class="absolute top-40 right-20 w-24 h-24 bg-secondary-500/20 rounded-full blur-xl animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-40 left-1/3 w-40 h-40 bg-primary-400/10 rounded-full blur-2xl animate-float" style="animation-delay: 2s;"></div>
  </div>

  <div class="container mx-auto text-center relative z-10">
    <!-- Token Symbol -->
    <div class="mb-8">
      <div class="inline-flex items-center justify-center w-32 h-32 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-full mb-6 animate-bounce-slow">
        <span class="text-4xl font-black text-white">{siteConfig.token.symbol}</span>
      </div>
    </div>

    <!-- Main Headline -->
    <h1 class="text-6xl md:text-8xl font-black mb-6 bg-gradient-to-r from-primary-400 via-primary-500 to-secondary-500 bg-clip-text text-transparent leading-tight">
      {siteConfig.hero.headline}
    </h1>

    <!-- Subheadline -->
    <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed">
      {siteConfig.hero.subheadline}
    </p>

    <!-- Token Info -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/20">
        <div class="text-sm text-gray-400 uppercase tracking-wide">Token</div>
        <div class="text-2xl font-bold text-primary-400">{siteConfig.token.name}</div>
      </div>
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/20">
        <div class="text-sm text-gray-400 uppercase tracking-wide">Network</div>
        <div class="text-2xl font-bold text-secondary-400">{siteConfig.token.network}</div>
      </div>
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/20">
        <div class="text-sm text-gray-400 uppercase tracking-wide">Supply</div>
        <div class="text-2xl font-bold text-primary-400">{siteConfig.token.totalSupply}</div>
      </div>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a 
        href="#contract" 
        class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full hover:from-primary-600 hover:to-secondary-600 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-primary-500/25"
      >
        <span class="relative z-10">{siteConfig.hero.ctaText}</span>
        <div class="absolute inset-0 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </a>
      
      <a 
        href="#tokenomics" 
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white/30 rounded-full hover:border-primary-500 hover:bg-primary-500/10 transition-all duration-300"
      >
        Learn More
      </a>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </div>
</section>
