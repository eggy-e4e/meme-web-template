---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContractAddress from '../components/ContractAddress.astro';
import Tokenomics from '../components/Tokenomics.astro';
import Roadmap from '../components/Roadmap.astro';
import SocialLinks from '../components/SocialLinks.astro';
import Footer from '../components/Footer.astro';
import siteConfig from '../config/site.json';
---

<Layout title={siteConfig.site.title} description={siteConfig.site.description}>
  <main>
    <Hero />
    <ContractAddress />
    <Tokenomics />
    <Roadmap />
    <SocialLinks />
    <Footer />
  </main>
</Layout>
